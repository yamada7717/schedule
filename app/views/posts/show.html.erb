<%= render "shared/header"%>
<div class="container">
  <div class="d-flex justify-content-between">
    <h3 class="PageTitle__text">確認ページ</h3>
    <%= link_to "編集", :edit_post, class:"btn btn-outline-primary pt-2" %>
  </div>

  <div class="form_wrapper">
    <div class="table-responsive TableResponsive">
      <table class="table Table">
        <tbody>
        <tr>
          <th>タイトル</th>
          <td><%=@post.title %></td>
        </tr>
        <tr>
          <th>開始日</th>
          <td><%=@post.start_date&.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>終了日</th>
          <td><%=@post.end_date&.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>終日</th>
          <td>
            <% if @post.all_day == true %>
            <strong>⚪︎</strong>
            <% end %>
            </td>
        </tr>
        <tr>
          <th>スケジュールメモ</th>
          <td><%=@post.introduction %></td>
        </tr>
        </tbody>
      </table>
    </div>
      <%= link_to "一覧に戻る", :posts, class:"btn btn-outline-primary" %>
  </div>
</div>
